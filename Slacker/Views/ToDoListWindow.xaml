<Window x:Class="Slacker.Views.ToDoListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="ToDoListWindow" Height="413" Width="371"
        ResizeMode="NoResize">
    <Grid>
        <TextBox Name="ToDoListName" HorizontalAlignment="Center" VerticalAlignment="Center" Height="45" Width="204"
                 Margin="0,0,0,280" />
        <Grid Margin="0,91,0,71">
            <Image Name="ToDoListImage" Source="/Assets/House.png" HorizontalAlignment="Center"
                   VerticalAlignment="Center" Height="204" Width="204" />
            <Button Name="NextImageButton" Content=">>" HorizontalAlignment="Right" VerticalAlignment="Center"
                    Height="40" Width="40" Margin="0,0,33,0" Click="NextImageButton_Click" />
            <Button Name="PreviousImageButton" Content="&lt;&lt;" HorizontalAlignment="Left" VerticalAlignment="Center"
                    Height="40" Width="40" Margin="33,0,0,0" Click="PreviousImageButton_Click" />
        </Grid>
        <Button Name="ConfirmButton" Content="Confirm" HorizontalAlignment="Center" Margin="0,332,0,0"
                VerticalAlignment="Top" Height="34" Width="97" Click="ConfirmButton_Click" />
    </Grid>
</Window>